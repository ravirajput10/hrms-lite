{
    "name": "hrms-lite",
    "version": "1.0.0",
    "private": true,
    "description": "A lightweight Human Resource Management System",
    "workspaces": [
        "frontend"
    ],
    "scripts": {
        "frontend:dev": "npm run dev --workspace=frontend",
        "backend:dev": "cd backend && .\\venv\\Scripts\\python.exe -m uvicorn app.main:app --reload --port 8000",
        "dev": "concurrently \"npm run frontend:dev\" \"npm run backend:dev\"",
        "build": "npm run build --workspace=frontend"
    },
    "keywords": [
        "hrms",
        "hr",
        "employee-management",
        "attendance"
    ],
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "concurrently": "^9.2.1"
    }
}